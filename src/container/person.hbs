                    <p>{{name}} / {{position}}</p>
                    <em>{{department}}</em>
                </li>
            </ul>

        </div>
        <div>
            {{#each projects}}
            <ul>
                <h2>Projects {{name}}</h2>
                <li>
                    <p>{{description}}</p>
                    <em>{{status}}...</em>
                </li>
            </ul>


            {{/each}}
